<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.loveplusplus.zhengzhou"
    android:versionCode="3"
    android:versionName="1.0.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <permission
        android:name="com.loveplusplus.zhengzhou.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.loveplusplus.zhengzhou.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ico_bus"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name=".ui.HomeActivity"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.AboutActivity"
            android:label="@string/about" />
        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/settings" />
        <activity android:name=".ui.BusLineActivity" />
        <activity android:name=".GpsWaitingActivity" />
        <activity
            android:name=".ui.SearchableBusLineActivity"
            android:exported="false"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>

                <!-- Receives the actual messages. -->
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <!-- Receives the registration id. -->
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.loveplusplus.zhengzhou" />
            </intent-filter>
        </receiver>

        <service android:name=".GCMIntentService" />

        <activity
            android:name=".ui.NotifyDetailActivity"
            android:label="@string/title_activity_notify_detail" >
        </activity>

        <provider
            android:name="com.loveplusplus.zhengzhou.provider.BusProvider"
            android:authorities="com.loveplusplus.zhengzhou.provider.BusProvider"
            android:exported="false" />

        <service android:name=".service.TaskService" />

        <meta-data
            android:name="android.app.default_searchable"
            android:value=".SearchableBusLineActivity" />

        <uses-library android:name="com.google.android.maps" />

        <activity android:name=".ui.StationMapActivity" >
        </activity>
    </application>

</manifest>